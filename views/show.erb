<div class="my-8 overflow-hidden bg-white shadow sm:rounded-lg">
    <div class="px-4 py-6 sm:px-6">
        <h3 class="text-base font-semibold leading-7 text-gray-900">Job and Salary Information</h3>
        <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">Taken from the Bureau of Labor Statistics.</p>
    </div>
    <div class="border-t border-gray-100">
        <dl class="divide-y divide-gray-100">
            <% @job.each do  |column, value| %>
                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-900"><%= column %></dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= value %></dd>
                </div>
            <% end %>
        </dl>
    </div>
</div>
